@{
}

@model List<Movies>

<table class="table table-striped table-bordered">
    <thead class="thead-light"> 
        <tr>
            <th scope="col">Movie Title</th>
            <th scope="col">Year</th>
            <th scope="col">Director</th>
            <th scope="col">Category</th>
            <th scope="col">Rating</th>
            <th scope="col">Edited</th>
            <th scope="col">Lent To</th>
            <th scope="col">Copied To Plex</th>
            <th scope="col">Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movies mov in Model) {
            <tr>
                <td>@mov.Title</td>
                <td>@mov.Year</td>
                <td>@mov.Director</td>
                @if (mov.CategoryId != null) {
                    <td>
                        @{
                            List<Categories> categories = ViewBag.CategoryList;
                            var category = categories.FirstOrDefault(cat => cat.CategoryId == mov.CategoryId);
                            if (category != null)
                            {
                                @category.Category;
                            } else
                            {
                                <text>None</text>
                            }
                        }
                        
                    </td>
                } else {
                    <td></td>
                }
                <td>@mov.Rating</td>
                <td>@mov.Edited</td>
                <td>@mov.LentTo</td>
                <td>@mov.CopiedToPlex</td>
                <td>@mov.Notes</td>
                <td><a class="btn btn-info" asp-controller="Home" asp-action="EditMovie" asp-route-movieId="@mov.MovieId">Edit</a></td>
            </tr>
        }
    </tbody>
</table>