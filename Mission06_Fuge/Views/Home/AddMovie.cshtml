@{
}

@model Movies

<div class="text-center">
    @if (Model != null)
    {
        <h3>Thank you for adding @Model.Title to Joel's collection!</h3>
    }

    <form method="post">

        @if (Model != null)
        {
            <input type="hidden" asp-for="MovieId" />
        }

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />
        @Html.ValidationMessageFor(model => model.Title)
        <br />
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Categories cat in ViewBag.CategoryList)
            {
                <option value="@cat.CategoryId">@cat.Category</option>
            }
            @* <option value="1">Miscellaneous</option>
            <option value="2">Drama</option>
            <option value="3">Television</option>
            <option value="4">Horror/Suspense</option>
            <option value="5">Comedy</option>
            <option value="6">Family</option>
            <option value="7">Action/Adventure</option>
            <option value="8">VHS</option> *@
        </select>
        <br />
        <label asp-for="Year">Starting Year:</label>
        <input asp-for="Year" />
        <br />
        @Html.ValidationMessageFor(model => model.Year)
        <br />
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />
        @Html.ValidationMessageFor(model => model.Director)
        <br />

        <br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" id="rating" name="rating" style="width: 80%;">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            @* <option value="NR">NR</option>
            <option value="TV-14">TV-14</option>
            <option value="TV-PG">TV-PG</option>
            <option value="UR">UR</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="R?">R?</option> *@
        </select>
        <br />
        @Html.ValidationMessageFor(model => model.Rating)
        <br />
        <label asp-for="Edited">Edited:</label>
        <input asp-for="Edited" />
        <br />
        <label asp-for="CopiedToPlex">Copied To Plex:</label>
        <input asp-for="CopiedToPlex" />
        <br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" value="" />
        @* @Html.TextBoxFor(n => n.LentTo, new { @value = ""}) *@
        <br />
        <label asp-for="Notes" >Notes:</label>
        <input asp-for="Notes" value="" />
        @* @Html.TextBoxFor(n => n.Notes, new { @value = "" }) *@
        <br />
        <button type="submit">Add Movie</button>
    </form>

</div>